<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/chat_avatar_size"
    android:layout_height="@dimen/chat_avatar_size">

    <ImageView
        android:id="@+id/avatar_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/avatar_mask"/>

    <ImageView
        android:id="@+id/imageView_presenceRing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/presence_ring"/>

    <ImageView
        android:layout_width="@dimen/chat_avatar_keyboard_size"
        android:layout_height="@dimen/chat_avatar_keyboard_size"
        android:visibility="gone"
        android:id="@+id/avatar_typing_img"
        android:src="@drawable/icon_keyboard"/>

</FrameLayout><!-- From: file:/Users/yannick_lecollen/matrix-android-sdk/matrix-sdk/src/main/res/layout/round_avatar.xml -->